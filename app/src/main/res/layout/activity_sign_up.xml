            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:autofillHints=""
                android:hint="@string/enter_your_email"
                app:autoValidate="true"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/sign_in_email_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:background="@drawable/sign_up_edittext_background"
                    android:fontFamily="@font/andlso"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingHorizontal="16dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_edit_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:autofillHints=""
                android:hint="@string/enter_your_password"
                app:autoValidate="true"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/sign_in_password_icon">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:background="@drawable/sign_up_edittext_background"
                    android:fontFamily="@font/andlso"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingHorizontal="34dp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_edit_confirm_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:autofillHints=""
