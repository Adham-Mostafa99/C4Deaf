                <Spinner
                    android:id="@+id/sign_up_spinner_state"
                    android:layout_width="315dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>


            <CheckBox
                android:id="@+id/sign_up_check_accepted_rules"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="52dp"
                android:text="@string/i_accept_terms_amp_conditions"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="144dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_horizontal_value"
                android:layout_marginTop="12dp"
                android:background="@drawable/sign_up_button"
                android:fontFamily="@font/andlso"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/andlso"
                    android:text="@string/already_have_account"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sign_up_have_account"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_background"
                    android:fontFamily="@font/andlso"
                    android:text="@string/signin"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

