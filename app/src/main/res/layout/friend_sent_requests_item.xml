<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="18.9dp"
    android:layout_marginVertical="7dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_sent_request_item_photo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:src="@drawable/default_photo" />
    <TextView
        android:id="@+id/friend_sent_request_item_display_name"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="13.7dp"
        android:text="user name"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/ignore_friend_sent_request"
        android:layout_width="104.3dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginStart="93.2dp"
        android:background="@drawable/border_btn_sign_in_gft"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/andlso"
        android:text="Cancel Request"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="12dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginStart="77dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>
