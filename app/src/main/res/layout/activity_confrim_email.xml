<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9765B"
    tools:context=".ui.SignInActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_in_upper_background" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/andlso"
        android:text="Verification"
        android:textColor="@android:color/white"
        android:textSize="42sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="678dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/sign_in_lower_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sign_in_info_background" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/verification"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:rotation="17"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="414dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/andlso"
        android:gravity="center"
        android:text="Check your email"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/email_verify"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="451dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/andlso"
        android:gravity="center"
        android:text="Please verify your email to start chatting"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/resend_button"
        android:layout_width="235dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="508dp"
        android:background="@drawable/sign_in_button_backgroud"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/andlso"
        android:text="Resend Verification"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/change_button"
        android:layout_width="235dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="612dp"
        android:background="@drawable/sign_in_button_backgroud"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/andlso"
        android:text="Change email address"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>